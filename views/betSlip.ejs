<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>betSA | Bet Slip</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link href="styles/betSlipStyles.css" rel="stylesheet"/>


<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/home">betSA</a>
      <div class="d-flex">
        <form action="/" method="GET">
          <button type="submit" class="btn btn-outline-light">Logout</button>
        </form>
      </div>
    </div>
  </nav>

  <!-- Header -->
  <div class="page-header">
    <h1 class="fw-bold">Your Bet Slip</h1>
    <p class="text-light">Review or remove your selected bets below.</p>
  </div>

  <!-- Bet Table -->
  <div class="container mt-4 mb-5">
    <div class="table-responsive">
      <table class="table table-striped align-middle shadow">
        <thead>
          <tr>
            <th>Event</th>
            <th>Winner</th>
            <th>Payout</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% if (bets.length === 0) { %>
            <tr>
              <td colspan="4" class="text-center text-muted">No bets in your slip.</td>
            </tr>
          <% } else { %>
            <% bets.forEach(bet => { %>
              <tr>
                <td><%= bet.event %></td>
                <td><%= bet.winner %></td>
                <td><%= bet.payout %></td>
                <td>
                  <a href="#" class="delete-link" onclick='openDeleteModal("<%= bet.event %>", "<%= bet.winner %>")'>Delete</a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Home Button -->
    <div class="text-center mt-4">
      <form action="/home" method="GET">
        <button type="submit" class="btn btn-custom btn-lg px-5">Back to Home</button>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="confirmDeleteModal" class="detailsModal" style="display: none;">
    <div class="detailsModal-content">
      <h4 class="fw-bold mb-3">Confirm Delete</h4>
      <p id="confirmDeleteText">Are you sure you want to delete this bet?</p>
      <form id="deleteForm" action="/remove" method="POST">
        <input type="hidden" name="property" value="event" />
        <input type="hidden" name="id-delete" id="deleteBetEvent" />
        <div>
          <button type="button" onclick="closeDeleteModal()">Cancel</button>
          <button type="submit"><strong>Delete</strong></button>
        </div>
      </form>
    </div>
  </div>

  <footer>
    &copy; <%= new Date().getFullYear() %> betSA â€” Responsible Betting Starts Here.
  </footer>

  <!-- JS for Modal -->
  <script src="script/betSlipScript.js"></script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
