<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>betSA | Bet Slip</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    body {
      background: linear-gradient(to right, #002b5b, #0466c8);
      color: white;
      min-height: 100vh;
      font-family: "Poppins", sans-serif;
    }

    .navbar {
      background-color: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(10px);
    }

    .page-header {
      text-align: center;
      margin-top: 3rem;
    }

    table {
      background-color: white;
      color: black;
      border-radius: 10px;
      overflow: hidden;
    }

    th {
      background-color: #002b5b;
      color: white;
      text-align: center;
      padding: 10px;
    }

    td {
      text-align: center;
      padding: 10px;
    }

    a.delete-link {
      color: #dc3545;
      text-decoration: none;
      font-weight: 600;
    }

    a.delete-link:hover {
      text-decoration: underline;
    }

    .btn-custom {
      background-color: #ffc107;
      color: #000;
      border: none;
      font-weight: 600;
      transition: 0.3s ease;
    }

    .btn-custom:hover {
      background-color: #e0a800;
      color: #fff;
    }

    /* Modal Styling */
    .detailsModal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.6);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      z-index: 999;
    }

    .detailsModal-content {
      background-color: #fff;
      color: black;
      width: 400px;
      border-radius: 10px;
      padding: 25px;
      box-shadow: 0 0 20px rgba(0,0,0,0.3);
      text-align: center;
    }

    .detailsModal-content button {
      border: none;
      padding: 8px 18px;
      margin: 10px 5px;
      border-radius: 6px;
      cursor: pointer;
    }

    .detailsModal-content button:first-child {
      background-color: #6c757d;
      color: white;
    }

    .detailsModal-content button:last-child {
      background-color: #dc3545;
      color: white;
    }

    footer {
      text-align: center;
      padding: 1rem;
      background-color: rgba(0, 0, 0, 0.2);
      position: fixed;
      width: 100%;
      bottom: 0;
      color: #ccc;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/home">betSA</a>
      <div class="d-flex">
        <form action="/" method="GET">
          <button type="submit" class="btn btn-outline-light">Logout</button>
        </form>
      </div>
    </div>
  </nav>

  <!-- Header -->
  <div class="page-header">
    <h1 class="fw-bold">Your Bet Slip</h1>
    <p class="text-light">Review or remove your selected bets below.</p>
  </div>

  <!-- Bet Table -->
  <div class="container mt-4 mb-5">
    <div class="table-responsive">
      <table class="table table-striped align-middle shadow">
        <thead>
          <tr>
            <th>Event</th>
            <th>Winner</th>
            <th>Payout</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% if (bets.length === 0) { %>
            <tr>
              <td colspan="4" class="text-center text-muted">No bets in your slip.</td>
            </tr>
          <% } else { %>
            <% bets.forEach(bet => { %>
              <tr>
                <td><%= bet.event %></td>
                <td><%= bet.winner %></td>
                <td>R <%= bet.payout %></td>
                <td>
                  <a href="#" class="delete-link" onclick='openDeleteModal("<%= bet.event %>", "<%= bet.winner %>")'>Delete</a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Home Button -->
    <div class="text-center mt-4">
      <form action="/home" method="GET">
        <button type="submit" class="btn btn-custom btn-lg px-5">Back to Home</button>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="confirmDeleteModal" class="detailsModal" style="display: none;">
    <div class="detailsModal-content">
      <h4 class="fw-bold mb-3">Confirm Delete</h4>
      <p id="confirmDeleteText">Are you sure you want to delete this bet?</p>
      <form id="deleteForm" action="/remove" method="POST">
        <input type="hidden" name="property" value="event" />
        <input type="hidden" name="id-delete" id="deleteBetEvent" />
        <div>
          <button type="button" onclick="closeDeleteModal()">Cancel</button>
          <button type="submit"><strong>Delete</strong></button>
        </div>
      </form>
    </div>
  </div>

  <footer>
    &copy; <%= new Date().getFullYear() %> betSA â€” Responsible Betting Starts Here.
  </footer>

  <!-- JS for Modal -->
  <script>
    function openDeleteModal(event, winner) {
      document.getElementById('deleteBetEvent').value = event;
      document.getElementById('confirmDeleteText').textContent =
        `Are you sure you want to delete winner: "${winner}"?`;
      document.getElementById('confirmDeleteModal').style.display = 'flex';
    }

    function closeDeleteModal() {
      document.getElementById('confirmDeleteModal').style.display = 'none';
    }
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
